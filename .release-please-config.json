{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "refactor","section": "Refactors" },
    { "type": "chore", "section": "Miscellaneous Chores" },
    { "type": "docs", "section": "Docs" }
  ],
  "pull-request-header": ":rotating_light: There are changes ready for release :rocket:\n\nâ„¹ Merge this PR once the team confirms the release is ready.\n",
  "pull-request-title-pattern": "chore: ${version}",
  "include-component-in-tag": false,
  "extra-files": [
    "lib/src/version.dart"
  ],
  "packages": {
    ".": {
      "release-type": "dart",
      "changelog-path": "CHANGELOG.md",
      "version-file": "pubspec.yaml"
    }
  }
}